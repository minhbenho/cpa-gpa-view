<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="calcpa.controller.SemesterController">

    <!-- ================= TOP BAR ================= -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="10" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="10" left="10" right="10" top="10" />
            </padding>

        <Label style="-fx-font-weight: bold;" text="Kỳ học:" />
            <ComboBox fx:id="semesterCombo" prefWidth="200" promptText="Chọn kỳ" />

            <Pane HBox.hgrow="ALWAYS">
            <children>
                 <VBox prefWidth="160" spacing="12" style="-fx-background-color: #f5f5f5;">
                     <padding>
                         <Insets bottom="12" left="12" right="12" top="12" />
                     </padding>
         
                     <Button maxWidth="Infinity" onAction="#onAddSemester" text="Thêm kỳ mới" />
         
                 </VBox>
            </children></Pane>

            <!-- Chỉ hiện sau khi chọn kỳ -->
            <Button fx:id="btnAddCourse" onAction="#onAddCourse" text="+ Thêm môn" visible="false" />
        </HBox>
    </top>

    <!-- ================= CENTER TABLE ================= -->
    <center>
        <VBox spacing="5">
            <padding>
                <Insets bottom="10" left="10" right="10" top="10" />
            </padding>

        <TableView fx:id="courseTable" editable="true">

                <columns>
                    <TableColumn fx:id="colCode" prefWidth="120" text="Mã môn" />

                    <TableColumn fx:id="colName" prefWidth="220" text="Tên môn" />

                    <TableColumn fx:id="colCredits" prefWidth="100" text="Số tín chỉ" />

                    <TableColumn fx:id="colGrade" prefWidth="80" text="Điểm" />

                    <TableColumn fx:id="colAction" prefWidth="60" text="" />
                </columns>
            </TableView>

        </VBox>
    </center>

    <!-- ================= BOTTOM GPA / CPA ================= -->
    <bottom>
        <HBox alignment="CENTER_LEFT" spacing="40" style="-fx-background-color: #eeeeee;" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="12" left="12" right="12" top="12" />
            </padding>

        <Label fx:id="gpaLabel" style="-fx-font-size: 14px; -fx-font-weight: bold;" text="GPA: " />

            <Label fx:id="cpaLabel" style="-fx-font-size: 14px; -fx-font-weight: bold;" text="CPA: " />

        </HBox>
    </bottom>

</BorderPane>
