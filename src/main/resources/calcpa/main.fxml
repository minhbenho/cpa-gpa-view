<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="calcpa.controller.MainController">
    <left>
        <VBox prefHeight="400.0" prefWidth="140.0" BorderPane.alignment="CENTER" spacing="8.0">
            <children>
                <VBox prefHeight="59.0" prefWidth="120.0">
                    <children>
                        <Label prefHeight="49.0" prefWidth="120.0" text="CPA App">
                            <font>
                                <Font size="20.0" />
                            </font>
                        </Label>
                    </children>
                </VBox>

                <Button fx:id="btnDashboard"
                        mnemonicParsing="false"
                        onAction="#showDashboard"
                        prefHeight="40.0"
                        prefWidth="120.0"
                        text="Dashboard" />

                <Button fx:id="btnSemester"
                        mnemonicParsing="false"
                        onAction="#showSemester"
                        prefHeight="40.0"
                        prefWidth="120.0"
                        text="Semester" />

                <Button fx:id="btnSubject"
                        mnemonicParsing="false"
                        onAction="#showSubject"
                        prefHeight="40.0"
                        prefWidth="120.0"
                        text="Subject" />

                <Button fx:id="btnSetting"
                        mnemonicParsing="false"
                        onAction="#showSetting"
                        prefHeight="40.0"
                        prefWidth="120.0"
                        text="Setting" />

                <!-- Nút Reload chung cho toàn app -->
                <Button fx:id="btnReload"
                        mnemonicParsing="false"
                        onAction="#reloadApp"
                        prefHeight="40.0"
                        prefWidth="120.0"
                        text="Reload data" />
            </children>
        </VBox>
    </left>

    <center>
        <StackPane>
            <fx:include fx:id="pageDashboard" source="dashboard.fxml"/>
            <fx:include fx:id="pageSemester" source="semester.fxml"/>
            <fx:include fx:id="pageSubject" source="subject.fxml"/>
            <fx:include fx:id="pageSetting" source="setting.fxml"/>
        </StackPane>
    </center>
</BorderPane>
